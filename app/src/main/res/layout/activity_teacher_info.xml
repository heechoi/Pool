<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.or.dgit.bigdata.pool.TeacherInfoActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="내정보"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:padding="10dp" />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhtie">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:text="강사 프로필"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:textColor="#000" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="2"
                        android:text="프로필 변경"
                        android:textSize="12dp"
                        android:layout_marginRight="7dp"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:background="@drawable/info_btn"
                        android:onClick="clickPhoto"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D0D0" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tImage"
                    android:minHeight="40dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhtie">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="강사번호"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textColor="#000" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D0D0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:minHeight="40dp"
                    android:padding="10dp"
                    android:id="@+id/tno"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhtie">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textColor="#000" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D0D0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:minHeight="40dp"
                    android:id="@+id/name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhtie">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="직급"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textColor="#000" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D0D0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:minHeight="40dp"
                    android:id="@+id/title"/>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhtie">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:text="내 정보"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:textColor="#000" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="35dp"
                        android:text="수정"
                        android:textSize="12dp"
                        android:layout_marginRight="7dp"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:background="@drawable/info_btn"
                        android:id="@+id/changeInfo"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D0D0" />


                        <TextView
                            android:id="@+id/basic_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="90dp"
                            android:maxHeight="100dp"
                            android:scrollbars="vertical"
                            android:padding="10dp"
                            android:textSize="14dp" />

                    <EditText
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="100dp"
                            android:minHeight="100dp"
                            android:scrollbars="vertical"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:background="@null"
                            android:id="@+id/editInfo"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/btn_layout"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:layout_marginBottom="7dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="취소"
                        android:id="@+id/back"
                        android:background="@drawable/info_btn"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:onClick="clickBack"
                        android:layout_marginRight="5dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/info_btn"
                        android:textColor="#fff"
                        android:text="저장"
                        android:textSize="12dp"
                        android:onClick="clickStore"
                        android:id="@+id/storeInfo"
                        android:layout_marginRight="7dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhtie">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="연락처"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textColor="#000" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D0D0" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:padding="10dp"
                        android:minHeight="40dp"
                        android:id="@+id/tell"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_down"
                        android:id="@+id/show_tell"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/colorWhtie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/change_tell_layout"
                android:padding="10dp"
                android:visibility="gone" >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="새 연락처"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="13dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/tell1"
                    android:maxLength="3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="13dp"
                    android:text="-"
                    android:textColor="#000"
                    android:textAlignment="center"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="13dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/tell2"
                    android:maxLength="4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="13dp"
                    android:text="-"
                    android:textColor="#000"
                    android:textAlignment="center"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="13dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/tell3"
                    android:maxLength="4"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:textSize="12dp"
                    android:textColor="#fff"
                    android:background="@drawable/info_btn"
                    android:text="변경"
                    android:onClick="clickCheckTell"
                    android:id="@+id/newtell"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhtie">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textColor="#000" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D0D0" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:padding="10dp"
                        android:text="비밀번호를 변경합니다" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_down"
                        android:id="@+id/show_pw"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/change_layout"
                    android:padding="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:text="*비밀번호는 8~20자,영문,숫자,특수문자(~!@#$%^&amp;*)를 한번 이상 사용해야합니다"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="현재비밀번호"
                            android:hint="기존 비밀번호"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="13dp"
                            android:id="@+id/nowPw"
                            android:maxLength="20"
                            android:inputType="textPassword">
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="새비밀번호"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="13dp"
                            android:maxLength="20"
                            android:id="@+id/newPw"
                            android:inputType="textPassword" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="비밀번호 확인"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:textSize="13dp"
                            android:maxLength="20"
                            android:id="@+id/newPw2"
                            android:inputType="textPassword"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:text="변경"
                        android:textColor="#fff"
                        android:background="@drawable/info_btn"
                        android:id="@+id/pwChageBtn"
                        android:onClick="clickChangePw"
                        android:layout_gravity="right"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>
