<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/classtime2"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="요일"
            android:gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@drawable/classtime2"
            android:text="수강반"
            android:gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="수강시간"
            android:gravity="center"
            android:background="@drawable/classtime2"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/classtime2"
            android:text="수강료"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@drawable/classtime2"
            android:gravity="center"
            android:text="비고"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <TextView
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_gravity="center_vertical"
         android:layout_weight="1"
         android:background="@drawable/classtime2"
         android:gravity="center"
         android:textSize="13sp"
         android:textStyle="bold"
         android:text="평일반"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/classtime"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:background="@drawable/classtime"
                android:textSize="13sp"
                android:text="새벽반"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/classtime"
                android:text="오전반"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/classtime"
                android:text="오후반"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:background="@drawable/classtime"
                android:textSize="13sp"
                android:text="저녘반"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/classtime"
                android:textSize="13sp"
                android:text="06:00 ~ 07:00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/classtime"
                android:textSize="13sp"
                android:text="07:00 ~ 08:00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/classtime"
                android:textSize="13sp"
                android:text="09:00 ~ 10:00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/classtime"
                android:text="11:00 ~ 12:00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/classtime"
                android:gravity="center"
                android:textSize="13sp"
                android:text="13:00 ~ 14:00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/classtime"
                android:text="15:00 ~ 16:00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/classtime"
                android:textSize="13sp"
                android:text="17:00 ~ 18:00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/classtime"
                android:text="19:00 ~ 20:00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/classtime"
                android:textSize="13sp"
                android:text="20:00 ~ 21:00"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/classtime"
                android:text="21:00 ~ 22:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:background="@drawable/classtime"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="50,000원"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/classtime"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="주 5회"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/classtime2"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="주말반"
            android:gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:background="@drawable/classtime"
            android:text="자유수영"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="06:00 ~ 22:00"
            android:gravity="center"
            android:background="@drawable/classtime"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/classtime"
            android:text="2,200원"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:background="@drawable/classtime"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="수강반"
            android:layout_weight="1" android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime2"
            android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="소요시간"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/classtime2"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="수영과정별"
                android:layout_weight="2"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/classtime2"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="지도내용"
                android:layout_weight="2"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/classtime2"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="초급"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1개월"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="초보자 및 1개월 강습자"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="기초호흡, 발차기, 자유형 완성"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="중급"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1~2개월"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="자유형 15M이상, 배영킥 20M이상"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="자유형 복습, 배영 완성"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="고급"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2~3개월"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="자유형 배영, 평영 15M 이상"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="자유형 배영, 복습, 평영 완성"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="상급"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3~4개월"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="자유형, 배영, 평영 25M 이상, 접영 15M이상"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="자유형 배영, 평영 복습, 접영 완성"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="연수"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="10개월 ~ 1년"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="자유형, 배영, 평영, 접영 50M 자유형, 평영 100M"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/classtime"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="자유형 평영, 접영, 지구력 배양, 기본 배영, 트루젠 I-M, 턴 스타트(중급)"
            android:layout_weight="2"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/classtime2"
            android:textSize="13sp"/>
    </LinearLayout>
</LinearLayout>
