<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.or.dgit.bigdata.pool.SearchIdActivity"
    android:background="@drawable/tab_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디찾기"
            android:textColor="#fff"
            android:textSize="15dp"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|top"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디 찾을 방법을 선택해주세요"
                android:gravity="center"
                android:layout_marginBottom="100dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연락처로 찾기"
                android:textColor="#fff"
                android:padding="10dp"
                android:background="@drawable/join_btn"
                android:drawableLeft="@drawable/phone"
                android:id="@+id/tell_search"
                android:layout_marginBottom="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일로 찾기"
                android:textColor="#fff"
                android:onClick="findId"
                android:padding="10dp"
                android:background="@drawable/join_btn"
                android:drawableLeft="@drawable/email"
                android:id="@+id/email_search"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
